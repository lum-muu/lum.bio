{
  "name": "lum-bio-portfolio",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/build.js",
    "build:fast": "node scripts/build.js --skip=cms,fingerprint",
    "build:data": "node scripts/build-data.js",
    "fingerprint:inject": "node scripts/inject-fingerprint.js",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "type-check": "tsc --noEmit",
    "cms": "node scripts/cms.js",
    "sync": "npm run cms",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "size": "size-limit",
    "size:analyze": "size-limit --why",
    "integrity:check": "tsx scripts/check-integrity.ts",
    "ci": "bash scripts/ci/run-all-checks.sh",
    "ci:quality": "bash scripts/ci/check-quality.sh",
    "ci:coverage": "bash scripts/ci/report-coverage.sh",
    "ci:security": "bash scripts/ci/security-scan.sh",
    "ci:bundle": "bash scripts/ci/check-bundle-size.sh",
    "deps:prune": "npm prune --include=dev",
    "postinstall": "npm run deps:prune"
  },
  "dependencies": {
    "@sentry/browser": "^10.25.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sharp": "^0.34.5",
    "validator": "^13.15.23"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@size-limit/file": "^11.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/validator": "^13.15.10",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/ui": "^4.0.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "jsdom": "^27.1.0",
    "prettier": "^3.3.2",
    "size-limit": "^11.2.0",
    "terser": "^5.36.0",
    "tsx": "^4.15.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.2.2",
    "vite-plugin-sitemap": "^0.8.2",
    "vite-plugin-sri": "^0.0.2",
    "vitest": "^4.0.8"
  },
  "size-limit": [
    {
      "name": "main-chunk",
      "path": "dist/assets/main-*.js",
      "limit": "300 KB",
      "brotli": false,
      "gzip": false
    }
  ]
}
